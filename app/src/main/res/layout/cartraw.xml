<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_rowWeight="1"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:cardElevation="1dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_remove_circle_black_24dp"/>


            <ImageView
                android:background="@drawable/ic_shopping_cart_black_dp"
                android:layout_width="100dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/CartItemImage"
                android:layout_height="80dp" />

            <TextView
                android:textAlignment="textStart"
                android:text="Name"
                android:textColor="#000"
                android:gravity="start"
                android:id="@+id/CartItemName"
                android:layout_toEndOf="@+id/CartItemImage"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textAlignment="textStart"
                android:text="Price"
                android:id="@+id/CartItemPrice"
                android:layout_below="@+id/CartItemName"
                android:textColor="#000"
                android:layout_toEndOf="@+id/CartItemImage"
                android:layout_marginTop="8dp"
                android:layout_gravity="start"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textAlignment="textStart"
                android:text="Category"
                android:id="@+id/CartItemCategory"
                android:layout_below="@+id/CartItemPrice"
                android:textColor="#000"
                android:layout_toEndOf="@+id/CartItemImage"
                android:layout_marginTop="8dp"
                android:layout_gravity="start"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>